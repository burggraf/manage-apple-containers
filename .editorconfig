# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# TypeScript, JavaScript, JSON
[*.{ts,tsx,js,jsx,json}]
indent_style = tab
indent_size = 4

# CSS, SCSS
[*.{css,scss}]
indent_style = tab
indent_size = 4

# HTML
[*.html]
indent_style = tab
indent_size = 4

# Rust
[*.rs]
indent_style = tab
indent_size = 4

# Markdown
[*.md]
trim_trailing_whitespace = false

# YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# TOML
[*.toml]
indent_style = space
indent_size = 2
